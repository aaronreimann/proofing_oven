!!! 5
%html(lang="en-US")
  %head
    %title Proofing Oven
    %meta(charset="UTF-8")
    = stylesheet_link_tag "application"
    = javascript_include_tag "jquery-1.5.2.min", "rails", "application"
    = yield :head
  %body
    %header
      %h1= link_to "Proofing Oven", root_path
      %nav
        %ul
          %li.active= link_to "Candidates", candidates_path
          %li= link_to "Skills", "#"
      .session
        - if current_user
          %p Signed in as #{current_user.full_name}
          = link_to "Sign out", destroy_user_session_path
        - else
          = link_to "Sign up", new_user_registration_path
          \|
          = link_to "Sign in", new_user_session_path
    #content
      - if flash.any?
        .flash
          - flash.each do |type, message|
            %div(id = "flash_#{type}")= message

      = yield
